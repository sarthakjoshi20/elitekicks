<%-include("navbar.ejs")%>
<div id="content">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">Add Promotional Banner</h2>
                </div>
                <div class="card-body p-4">
                    <form action="/admin/add_slider" method="post" enctype="multipart/form-data">
                        <div class="row mb-2">
                            <div class="col-md-6">
                                <label for="slider_title" class="form-label fw-semibold">Banner Title</label>
                                <input type="text" class="form-control" id="slider_title" name="slider_title" placeholder="Enter slider title">
                            </div>
    
                            <div class="col-md-6">
                                <label for="slider_image" class="form-label fw-semibold">Banner Image</label>
                                <input type="file" class="form-control" id="slider_image" name="slider_image">
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6">
                                <label for="slider_button_text" class="form-label fw-semibold">Button Text</label>
                                <input type="text" class="form-control" id="slider_button_text" name="slider_button_text" placeholder="e.g. Shop Now">
                            </div>
                            <div class="col-md-6">
                                <label for="slider_button_link" class="form-label fw-semibold">Button Link</label>
                                <input type="url" class="form-control" id="slider_button_link" name="slider_button_link" placeholder="e.g. /products">
                            </div>
                        </div>

                        <div class="mb-2">
                            <label for="slider_description" class="form-label fw-semibold">Description</label>
                            <textarea class="form-control" id="editor" name="slider_description" rows="4" placeholder="Enter slider description (supports HTML)"></textarea>
                        </div>

                        <div class="d-flex justify-content-end align-items-center mt-2">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-plus me-2"></i> Add Banner
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%-include("footer.ejs")%>