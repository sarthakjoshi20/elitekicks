<%-include("navbar.ejs")%>
<div id="content">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">Add New Slider</h2>
                </div>
                <div class="card-body p-4">
                    <form action="/admin/add_slider" method="post" enctype="multipart/form-data">
                        <div class="row mb-2">
                            <div class="col-md-6">
                                <label for="slider_title" class="form-label fw-semibold">Slider Title</label>
                                <input type="text" class="form-control form-control-lg" id="slider_title" name="slider_title" placeholder="Enter slider title">
                            </div>
    
                            <div class="col-md-6">
                                <label for="slider_image" class="form-label fw-semibold">Slider Image</label>
                                <input type="file" class="form-control" id="slider_image" name="slider_image">
                                <div class="form-text" style="font-size: 12px;">Recommended size: 1920x800px, JPG/PNG format</div>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-6">
                                <label for="slider_button_text" class="form-label fw-semibold">Button Text</label>
                                <input type="text" class="form-control" id="slider_button_text" name="slider_button_text" placeholder="e.g. Shop Now">
                            </div>
                            <div class="col-md-6">
                                <label for="slider_button_link" class="form-label fw-semibold">Button Link</label>
                                <input type="url" class="form-control" id="slider_button_link" name="slider_button_link" placeholder="e.g. /products">
                            </div>
                        </div>

                        <div class="mb-2">
                            <label for="slider_description" class="form-label fw-semibold">Description</label>
                            <textarea class="form-control" id="editor" name="slider_description" rows="4" placeholder="Enter slider description (supports HTML)"></textarea>
                        </div>

                        <div class="d-flex justify-content-end align-items-center mt-2">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-plus me-2"></i> Add Slider
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">All Current Sliders</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="table-cover" style="overflow-x:auto; width:100%;">
                    <table class="table table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Preview</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Button Text</th>
                                <th>Button Link</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(result.length === 0) { %>
                                <tr>
                                    <td colspan="7" class="text-center py-4">No sliders found. Add your first slider.</td>
                                </tr>
                            <% } else { %>
                                <% for(var i=0;i<result.length;i++) { %>
                                    <tr>
                                        <td class="align-middle"><%- i+1 %></td>
                                        <td>
                                            <img src="/sliders/<%= result[i].slider_image %>" alt="<%= result[i].slider_title %>" class="img-fluid" style="max-width: 120px;">
                                        </td>
                                        <td class="align-middle">
                                            <strong><%= result[i].slider_title %></strong>
                                        </td>
                                        <td class="align-middle">
                                            <%= result[i].slider_description.length > 100 ? 
                                                result[i].slider_description.substring(0, 100) + '...' : 
                                                result[i].slider_description %>
                                        </td>
                                        <td class="align-middle">
                                            <%= result[i].slider_button_text %>
                                        </td>
                                        <td class="align-middle">
                                            <%= result[i].slider_button_link %>
                                        </td>
                                        <td class="align-middle">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="/admin/delete_slider/<%- result[i].slider_id %>">
                                                    <button class="btn btn-outline-danger delete-slider">
                                                        <i class="fas fa-trash-alt"></i> Delete
                                                    </button>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <% if(result.length > 0) { %>
            <div class="card-footer bg-light">
                <small class="text-muted">Showing <%= result.length %> slider(s)</small>
            </div>
        <% } %>
    </div>
</div>
<%-include("footer.ejs")%>