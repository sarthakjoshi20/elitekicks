<%- include("navbar.ejs") %>
<section class="container my-3 py-3"> 
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% for(var i=0;i<products.length;i++){ %>
      <div class="col fade-in delay-<%-i%>">
        <div class="product-card">
          <div class="position-relative overflow-hidden">
            <img src="/products/<%- products[i].product_main_image %>" class="img-fluid w-100 product-img" alt="Classic Oxford">
          </div>
          <div class="p-4">
            <h5><%- products[i].product_name %></h5>
            <p class="text-muted mb-2"><%- products[i].product_description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <span class="price">&#8377;<%- products[i].product_price %></span>
              <a href="#" class="btn btn-sm btn-dark rounded-0">VIEW</a>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
</section>
<%- include("footer.ejs") %>