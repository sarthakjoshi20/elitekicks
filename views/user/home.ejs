        <h2 class="section-title slide-up text-danger">HIGH DISCOUNT PRODUCTS</h2>
        <p class="text-muted slide-up delay-1">Limited-time offers</p>
      </div>
      
        <div class="row row-cols-1 row-cols-md-3 g-4" style="cursor: pointer;">
          <% for(var i=0;i<high_discount_products.length;i++){ %>
              <div class="col fade-in">
                <a style="text-decoration: none;" href="/product_details/<%- high_discount_products[i].product_id %>">
                  <div class="product-card">
                    <div class="position-relative overflow-hidden">
                      <img src="/products/<%- high_discount_products[i].product_main_image %>" class="img-fluid w-100 product-img">
                      <span class="discount-badge badge bg-danger"><%- high_discount_products[i].apply_discount_percent %> % OFF</span>
                    </div>
                    <div class="p-4">
                      <h5 class="text-dark"><%- high_discount_products[i].product_name %></h5>
                      <p class="mb-1"><span class="fw-bold text-success">&#8377;<%- high_discount_products[i].product_price %></span> <span class="text-muted text-decoration-line-through">&#8377;<%- high_discount_products[i].product_market_price %></span></p>
                      <a href="/product_details/<%- high_discount_products[i].product_id %>" class="btn btn-sm btn-dark rounded-0 w-100">VIEW DEAL</a>
                    </div>
                  </div>
