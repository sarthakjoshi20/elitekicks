<%- include("navbar.ejs") %>
   
   <!-- Hero Carousel -->
    <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <% for(var i=0;i<sliders.length;i++){ %>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="<%- i %>" class="<%- (i==0) ? 'active' : '' %>"></button>
        <% } %>
      </div>
      <div class="carousel-inner">
        <% for(var i=0;i<sliders.length;i++){ %>
        <div class="carousel-item <%- (i==0) ? 'active' : '' %>">
          <img src="/sliders/<%- sliders[i].slider_image %>" class="d-block w-100" alt="New Collection">
          <div class="carousel-caption">
            <h2 class="fw-bold display-4 mb-3"><%- sliders[i].slider_title %></h2>
            <p class="lead"><%- sliders[i].slider_description %></p>
            <a href="<%- sliders[i].slider_button_link %>" target="_blank" class="btn btn-light btn-lg rounded-0 mt-3"><%- sliders[i].slider_button_text %></a>
          </div>
        </div>
        <% } %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
      </button>
    </div>

    <!-- Trending Products -->
    <section class="container my-5 py-5">
      <div class="text-center mb-5">
        <h2 class="section-title slide-up">TRENDING SHOES</h2>
        <p class="text-muted slide-up delay-1">Our most popular picks this season</p>
      </div>
      
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% for(var i=0; i < trending_products.length; i++){ %>
          <div class="col fade-in delay-<%-i%>">
            <div class="product-card-wrapper">
              <a href="/product_details/<%- trending_products[i].product_id %>" class="text-decoration-none">
                <div class="product-card card h-100 border-0 shadow-sm hover-shadow transition-all">
                  <div class="position-relative overflow-hidden rounded-top">
                    <img 
                      src="/products/<%- trending_products[i].product_main_image %>" 
                      class="img-fluid w-100 product-img" 
                      alt="<%- trending_products[i].product_name %>"
                      loading="lazy"
                      style="height: 240px; object-fit: cover;"
                    >
                    <div class="product-overlay position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-0 transition-all"></div>
                  </div>
                  <div class="card-body p-3 p-lg-4">
                    <h5 class="product-title text-dark mb-2 fw-semibold"><%- trending_products[i].product_name %></h5>
                    <p class="product-desc text-secondary mb-3 small"><%- trending_products[i].product_description.substring(0,100) %>...</p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                      <span class="price text-danger fw-bold fs-5">&#8377;<%- trending_products[i].product_price.toLocaleString('en-IN') %></span>
                      <button class="btn btn-sm btn-dark rounded-1 px-3 py-2">
                        View Details
                      </button>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
        <% } %>
      </div>
      
      <style>
        .product-card-wrapper {
          transition: transform 0.3s ease;
        }
        
        .product-card-wrapper:hover {
          transform: translateY(-5px);
        }
        
        .product-card {
          transition: all 0.3s ease;
          border-radius: 0.5rem !important;
        }
        
        .product-card:hover {
          box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
        
        .product-img {
          transition: transform 0.5s ease;
        }
        
        .product-card:hover .product-img {
          transform: scale(1.03);
        }
        
        .product-card:hover .product-overlay {
          opacity: 0.05;
        }
        
        .product-title {
          transition: color 0.2s ease;
        }
        
        .product-card:hover .product-title {
          color: #000 !important;
        }
        
        .fade-in {
          animation: fadeIn 0.5s ease forwards;
          opacity: 0;
        }
        
        @keyframes fadeIn {
          to { opacity: 1; }
        }
        
        .delay-0 { animation-delay: 0.1s; }
        .delay-1 { animation-delay: 0.2s; }
        .delay-2 { animation-delay: 0.3s; }
        .delay-3 { animation-delay: 0.4s; }
        .delay-4 { animation-delay: 0.5s; }
        .delay-5 { animation-delay: 0.6s; }
      </style>
    </section>

    <!-- Promo Banner -->
    <section class="promo-banner my-5">
      <div class="container">
        <div class="row">
          <div class="col-md-8 slide-up">
            <h2 class="display-4 fw-bold mb-4">SUMMER SALE EVENT</h2>
            <p class="lead mb-4">Enjoy up to 50% off on selected styles. Limited time only.</p>
            <a href="#" class="btn btn-danger btn-lg rounded-0 px-5 pulse">SHOP THE SALE</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Shop by Sport Type -->
    <section class="container my-5 py-5">
      <div class="text-center mb-5">
        <h2 class="section-title slide-up">SHOP BY SPORT</h2>
        <p class="text-muted slide-up delay-1">Performance footwear for every activity</p>
      </div>
      
      <div class="row g-4" style="cursor: pointer;">
        <% for(var i=0;i<product_types.length;i++){ %>
        <div class="col-md-4 fade-in delay-<%-i%>">
          <div class="category-card">
            <img src="/product_types/<%- product_types[i].product_type_image %>" class="img-fluid w-100 h-100" alt="Running">
            <div class="category-overlay">
              <h3><%- product_types[i].product_type_name %></h3>
              <a href="#" class="text-white">SHOP NOW <i class="bi bi-arrow-right ms-2"></i></a>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </section>

    <!-- Shop by Style -->
    <section class="container my-5 py-5">
      <div class="text-center mb-5">
        <h2 class="section-title slide-up">SHOP BY STYLE</h2>
        <p class="text-muted slide-up delay-1">Find your perfect look</p>
      </div>
      
      <div class="row g-4" style="cursor: pointer;">
        <% for(var i=0;i<product_styles.length;i++){ %>
